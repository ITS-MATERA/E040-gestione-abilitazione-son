<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:zcontrolPosFin="zsap.com.r3.cobi.s4.custposfin.z_s4_zposfinlink.controls"
>


  <Table  			
			contextualWidth="Auto"
			growing="true"
			selectionChange="onSelectedItem"
			updateFinished="onUpdateFinishedDetail"
				items="{
				path: 'checkList>/'
			}"
		>
		
		<headerToolbar>
			<OverflowToolbar >
			 	<Title text="{detailModel>/detailTableTitle}"  class="sapUiTinyMargin titleSize"></Title>
				<ToolbarSpacer/>

			</OverflowToolbar>
		</headerToolbar>
		<columns>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZchiavesop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZdatasop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameLifnr}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFipos}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFistl}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZimptot}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZtipodisp3}" /></header>
		</Column>

		<Column minScreenWidth="Tablet" demandPopin="true" >
				<header><Text text="{i18n>fieldNameZdatarichann}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true"  >
				<header><Text text="{i18n>fieldNameZricann}" /></header>
		</Column>		
	
		<Column minScreenWidth="Tablet" demandPopin="true" >
				<header><Text text="{i18n>columnNameZstatoSop}" /></header>
		</Column>
	
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text  text="{checkList>Zchiavesop}" />
					<Text   text="{
								path: 'checkList>Zdatasop',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'dd.MM.yyyy'
									}
							}"/>					
					<Text  text="{checkList>Beneficiario}" />
					<!-- <Text  text="{checkList>Fipos}" /> -->
					<zcontrolPosFin:LinkPosizioneFinanziaria id="linkPosFinSpesaDeleteCancel" anno="{checkList>Gjahr}" eos="S" fikrs="S001" fase="GEST" 
                        reale="R" versione="D" fipex="{checkList>Fipos}" 
                        datbis="99991231" text="{checkList>Fipos}" semanticObject="ESAMINAMODIFICA"/>
					<Text  text="{checkList>Fistl}" />
					<!-- <Text  text="{checkList>Zimptot}" /> -->
					<Text  text="{
							path: 'checkList>Zimptot',
							formatter: '.formatter.convertFormattedNumber'
						}" />
					<Text  text="{checkList>Zdesctipodisp3}" />
					<Text   text="{
							path: 'checkList>Zdatarichann',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'dd.MM.yyyy'
								}
						}" />
					<Text  text="{checkList>Zricann}"/>
					<Text  text="{
							path: 'checkList>ZstatoSop',
							formatter: '.formatter.formatZstatoSop'
						}" />			
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	
</c:FragmentDefinition>
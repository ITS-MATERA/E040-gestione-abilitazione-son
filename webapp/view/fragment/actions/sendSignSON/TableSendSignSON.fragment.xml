<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
>


  <Table  			
			contextualWidth="Auto"
			growing="true"
			selectionChange="onSelectedItem"
			updateFinished="onUpdateFinishedDetail"
				items="{
				path: 'detailModel>/changeList'
			}"
		>		
		
		<headerToolbar>
			<OverflowToolbar >
			 	<Title text="{detailModel>/detailTableTitle}"  class="sapUiTinyMargin titleSize"></Title>
				<ToolbarSpacer/>
				<FlexBox   justifyContent="End" >
					<DatePicker		
								id="sendSignSonDt"				     
								class="sapUiTinyMarginBottom"	
								valueFormat="dd.MM.yyyy"
								displayFormat="dd.MM.yyyy">	
							<layoutData>
								<OverflowToolbarLayoutData
									shrinkable="true"
									minWidth = "50px"/>
							</layoutData>
					</DatePicker>
					<Button class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom" press="onSendSignUpdateDate" text="{i18n>btnValueDateDeleteSendSign}" type="Emphasized">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
					</Button>
   		 		</FlexBox>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZchiavesop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZdatasop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameLifnr}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFipos}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFistl}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZimptot}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZtipodisp3}" /></header>
		</Column>
	
		<Column minScreenWidth="Tablet" demandPopin="true" >
				<header><Text text="{i18n>filterNameZnumprot}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true" >
				<header><Text text="{i18n>filterNameZdataprot}" /></header>
		</Column>		
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text  text="{detailModel>Zchiavesop}" />
					<Text   text="{
								path: 'detailModel>Zdatasop',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'dd.MM.yyyy'
									}
							}"/>					
					<Text  text="{detailModel>Beneficiario}" />
					<Text  text="{detailModel>Fipos}" />
					<Text  text="{detailModel>Fistl}" />
					<Text  text="{detailModel>Zimptot}" />
					<Text  text="{detailModel>Ztipodisp3}" />			
					<Input width="100%"  value="{detailModel>Znumprot}"  maxLength="6" liveChange="onZnumprotsUpdate" >
					</Input>				
					<DatePicker				
						valueFormat="dd.MM.yyyy"
						displayFormat="dd.MM.yyyy"
						value="{path: 'detailModel>Zdataprot',
								parts:[
									{path: 'detailModel>Zdataprot'}
								],
								formatter:'.formatter.dateWizard'
						}"
						change="onChangeUpdateDateRow"				
						>	
						<layoutData>
							<FlexItemData  growFactor="4" />
						</layoutData>
					</DatePicker>	

				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<!-- 		 -->
</c:FragmentDefinition>
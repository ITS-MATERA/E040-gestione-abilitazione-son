<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
    xmlns:l="sap.ui.layout"
    	xmlns:plugins="sap.m.plugins"
>


  <Table  			
			contextualWidth="Auto"
			growing="true"
			selectionChange="onSelectedItem"
			updateFinished="onUpdateFinishedDetail"
				items="{
				path: 'listTable>/'
			}"
		>
		<dependents>
			<plugins:ColumnResizer/>
		</dependents>
		<headerToolbar>
			<OverflowToolbar >
			 	<Title text="{detailModel>/detailTableTitle}"  class="sapUiTinyMargin titleSize"></Title>
				<ToolbarSpacer/>

			</OverflowToolbar>
		</headerToolbar>
		<columns>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZchiavesop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZdatasop}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameLifnr}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFipos}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFistl}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZimptot}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZtipodisp3}" /></header>
		</Column>

		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZstatoSop}" /></header>
		</Column>	
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text  text="{listTable>Zchiavesop}" />
					<Text   text="{
								path: 'listTable>Zdatasop',
								type: 'sap.ui.model.type.Date',
								formatOptions: {
									pattern: 'dd.MM.yyyy'
									}
							}"/>					
					<Text  text="{listTable>Beneficiario}" />
					<Text  text="{listTable>Fipos}" />
					<Text  text="{listTable>Fistl}" />
					<Text  text="{listTable>Zimptot}" />
					<Text  text="{listTable>Ztipodisp3}" />
					<Text  text="{
							path: 'listTable>ZstatoSop',
							formatter: '.formatter.formatZstatoSop'
						}"/>	
										
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	
</c:FragmentDefinition>
<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
	<FlexBox width="100%" class="bgWhite" justifyContent="End">
        <DatePicker	
                    id="idDateAllChange"						     
               	    class="sapUiTinyMarginBottom"	
                    valueFormat="dd.MM.yyyy"
                    displayFormat="dd.MM.yyyy"
                    change="onChangeUpdateDate">	
                <layoutData>
                    <OverflowToolbarLayoutData
                        shrinkable="true"
                        minWidth = "50px"/>
                </layoutData>
        </DatePicker>
        <Button class="sapUiTinyMarginEnd sapUiTinyMarginBegin sapUiTinyMarginBottom" press="onChangeUpdateDateAll" text="{i18n>btnValueDate}" type="Emphasized">
            <layoutData>
                <OverflowToolbarLayoutData priority="NeverOverflow" />
            </layoutData>
        </Button>
    </FlexBox>

</c:FragmentDefinition>
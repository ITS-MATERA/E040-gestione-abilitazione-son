<core:FragmentDefinition
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns="sap.m"
	xmlns:core="sap.ui.core" 
>
        <Table  id="idListAuthTable"
				mode="MultiSelect"
				fixedLayout="false"
				contextualWidth="Auto"
				growing="true"
				selectionChange="onSelectedItem"
				updateFinished="onUpdateFinished"
					items="{
					path: 'AbilitazioneSet>/'
				}"
		>
		
		<columns>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZufficioCont}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZvimDescrufficio}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFipos}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameFistl}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZtipodisp3}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameDatab}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameDatbi}" /></header>
		</Column>
		<Column minScreenWidth="Tablet" demandPopin="true">
				<header><Text text="{i18n>columnNameZstatoAbi}" /></header>
		</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
						<Text app:property="ZufficioCont" text="{AbilitazioneSet>ZufficioCont}" />
						<Text  text="{AbilitazioneSet>ZvimDescrufficio}" />
						<Link
								text="{AbilitazioneSet>Fipos}"
								press="handlePopoverPress"
								ariaHasPopup="Dialog"/>
						<Text  text="{AbilitazioneSet>Fistl}" />
						<Text  text="{AbilitazioneSet>Zdesctipodisp3}" />
						<Text   text="{
									path: 'AbilitazioneSet>Datab',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'dd.MM.yyyy'
										}
								}"/>							
						<Text text="{
									path: 'AbilitazioneSet>Datbi',
									type: 'sap.ui.model.type.Date',
									formatOptions: {
										pattern: 'dd.MM.yyyy'
										}
								}"/>	
						<Text  text="{
								path: 'AbilitazioneSet>ZstatoAbi',
								formatter: '.formatter.formatZstatoAbi'
							}" />																					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>
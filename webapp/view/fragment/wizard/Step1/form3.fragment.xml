<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
     xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>

    <!-- expandable="true"  -->
    <Panel  headerText="{i18n>wizardStep1SubTitle2}" width="auto" class="margin0 padding0 expanded">
		<content >
            <f:SimpleForm id="idStep1Form3"
                    editable="true"
                    class="formHiddenTitle"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="3"
                    labelSpanM="4"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="4"
                    columnsXL="2"
                    columnsL="2"
                    singleContainerFullSize="false">
                    <f:content>      
                        <Label design="Bold" text="{i18n>wizardFieldZimptot}" class="sapUiSmallMarginBottom"/>
                        <Input  editable="{wizardModel>/isInChange}" id="idWizardZimptot" type="Number"  app:property="Zimptot" value="{wizardModel>/Zimptot}" liveChange="onLiveChange">
                            <layoutData>
                                <l:GridData span="XL4 L5 M8 S12"  />
                            </layoutData>
                        </Input>
                        <Label design="Bold" text="{i18n>wizardFieldZimptotDivisa}" class="sapUiSmallMarginBottom"/>
                        <Input  editable="{wizardModel>/isInChange}" id="idWizardZimptotDivisa"  app:property="ZimptotDivisa" value="{wizardModel>/ZimptotDivisa}" liveChange="onLiveChange">
                            <layoutData>
                                <l:GridData span="XL4 L5 M8 S12"  />
                            </layoutData>
                        </Input>             
                        <core:Title text="" />
                        <Label design="Bold" text="{i18n>wizardFieldTrbtr}" class="sapUiSmallMarginBottom"/>
                        <Input  editable="{wizardModel>/isInChange}" id="idWizardTrbtr"  app:property="Trbtr" value="{wizardModel>/Trbtr}" liveChange="onLiveChange">
                            <layoutData>
                                <l:GridData span="XL4 L5 M8 S12"  />
                            </layoutData>
                        </Input>
                        <Label design="Bold" text="{i18n>wizardFieldTwaer}" class="sapUiSmallMarginBottom"/>
                        <Input  editable="{wizardModel>/isInChange}" id="idWizardTwaer"  app:property="Twaer" value="{wizardModel>/Twaer}" liveChange="onLiveChange">
                            <layoutData>
                                <l:GridData span="XL4 L5 M8 S12"  />
                            </layoutData>
                        </Input>                             
                    </f:content>
                </f:SimpleForm>
	    </content>
	</Panel>
  	
</core:FragmentDefinition>
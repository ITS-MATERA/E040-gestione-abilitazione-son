<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
>
    <!-- expandable="true" -->
    <Panel   headerText="{i18n>wizardStep2SubTitle2}" width="auto" class="margin0 padding0 expanded">
		<content >           
            <VBox id="idStep2Form2"> 
                <items>
                    <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">
                        <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardStep2SubTitle2}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL5 L5 M4 S12" /></layoutData>
                                            </Label>                                            
                                            <ComboBox
                                                id="idWizardPayMode"
                                                width="100%"             
                                                editable="{wizardModel>/isInChange}"                                     
                                                change="onSubmitPayModeChange"
                                                items="{
                                                        path: 'DataModel>/PayMode'
                                                        }"
                                                selectedKey="{wizardModel>/PayMode}"
                                                >
                                                <core:Item  key="{DataModel>Zwels}" text="{DataModel>ZdescWels}" />
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </ComboBox>	
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL5 L4 M8 S12" /></layoutData>
                        </VBox>                     		
                        <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldBanks}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                            <Input  editable="{wizardModel>/isInChange}" id="idWizardBanks"  app:property="Banks" value="{wizardModel>/Banks}" liveChange="onLiveChange">
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12" />
                                                </layoutData>
                                            </Input>       
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" linebreak="true" /></layoutData>
                        </VBox> 
                           <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldZZcausaleval}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL5 L5 M4 S12" /></layoutData>
                                            </Label>
                                             <Input id="idWizardZZcausaleval"  app:property="ZZcausaleval" value="{wizardModel>/ZZcausaleval}"   liveChange="onLiveChange" editable="{wizardModel>/isZZcausalevalEditable}">
                                                <layoutData>
                                                    <l:GridData span="XL7 L7 M6 S12"  />
                                                </layoutData>
                                            </Input>
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  
                        <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldIban}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL5 L5 M4 S12" /></layoutData>
                                            </Label>
                                          <Input  editable="{wizardModel>/isInChange}" id="idWizardIban" enabled="{wizardModel>/isIbanEditable}"
                                            app:property="Iban" value="{wizardModel>/Iban}" liveChange="onLiveChange" submit="onSubmitIban" >
                                            <layoutData>
                                                <l:GridData span="XL7 L7 M6 S12"  />
                                            </layoutData>
                                        </Input>   
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  

                        <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }">
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldAliasRGS}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd"
                                              visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                           <Input  value="{wizardModel>/Zalias}" editable="{= ${wizardModel>/isInChange} &amp;&amp; ${wizardModel>/PayMode} === 'ID3' }" 
                                              visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </Input>  
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  

                        <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }">
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldTipoConto}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                           <Input  value="{wizardModel>/AccTypeId}" enabled="false" visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </Input>  
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  

                        <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }">
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldProvincia}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                           <Input  value="{wizardModel>/RegioSosp}" enabled="false" visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </Input>  
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  

                        <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }">
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldDescrizioneConto}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                           <Input  value="{wizardModel>/ZaccText}" enabled="false" visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </Input>  
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>  

                        <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldSwift}" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                           <Input  value="{wizardModel>/Swift}" editable="{wizardModel>/isInChange}" 
                                             enabled="{wizardModel>/isBicEditable}">
                                                <layoutData>
                                                    <l:GridData span="XL5 L5 M6 S12"  />
                                                </layoutData>
                                            </Input>  
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>                          

                         <VBox>
                            <items>
                                <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                    <items>
                                        <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                            <Label  design="Bold" width="100%" text="{i18n>wizardFieldZcoordest}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                                <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                            </Label>
                                            <Input id="idWizardZcoordest"  app:property="Zcoordest" value="{wizardModel>/Zcoordest}" liveChange="onLiveChange" submit="onSubmitZcoordest" editable="{wizardModel>/isZcoordestEditable}">
                                                <layoutData>
                                                    <l:GridData span="XL6 L6 M6 S12"  />
                                                </layoutData>
                                            </Input>      
                                        </l:Grid>
                                    </items>     
                                </FlexBox>                                
                            </items>
                            <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                        </VBox>   

                      <!-- campi nuovi AF 1.2 -->

                      <VBox visible="{= ${wizardModel>/PayMode} === 'ID4' ? true : false }"  >
                          <items>
                              <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                  <items>
                                      <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0" >	
                                          <Label  design="Bold" width="100%" text="{i18n>wizardFieldPosizioneFinanziariaEntrante}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                              <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                          </Label>
                                          <Input  value="{wizardModel>/Zzposfinent}" editable="{= ${wizardModel>/isInChange} &amp;&amp; ${wizardModel>/PayMode} === 'ID4' }"
                                            visible="{= ${wizardModel>/PayMode} === 'ID4' ? true : false }" >
                                              <layoutData>
                                                  <l:GridData span="XL5 L5 M6 S12"  />
                                              </layoutData>
                                          </Input>  
                                      </l:Grid>
                                  </items>     
                              </FlexBox>                                
                          </items>
                          <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                      </VBox>  

                      <VBox visible="{= ${wizardModel>/PayMode} === 'ID6' || ${wizardModel>/PayMode} === 'ID10' ? true : false }">
                          <items>
                              <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                  <items>
                                      <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                          <Label  design="Bold" width="100%" text="{i18n>wizardFieldPurpose}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                              <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                          </Label>
                                          <Input  value="{wizardModel>/Zpurpose}" 
                                            editable="{= ${wizardModel>/isInChange} &amp;&amp; ( ${wizardModel>/PayMode} === 'ID6' || ${wizardModel>/PayMode} === 'ID10' ) }"
                                            visible="{= ${wizardModel>/PayMode} === 'ID6' || ${wizardModel>/PayMode} === 'ID10' ? true : false }" >
                                              <layoutData>
                                                  <l:GridData span="XL5 L5 M6 S12"  />
                                              </layoutData>
                                          </Input>  
                                      </l:Grid>
                                  </items>     
                              </FlexBox>                                
                          </items>
                          <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                      </VBox>  

                      <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }"    >
                          <items>
                              <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                  <items>
                                      <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                          <Label  design="Bold" width="100%" text="{i18n>wizardFieldFlagFruttifero}"  wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                              <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                          </Label>
                                          <ComboBox
                                              id="idWizardFlagFruttifero"
                                              width="100%"             
                                              editable="{= ${wizardModel>/isInChange} &amp;&amp; ${wizardModel>/PayMode} === 'ID3' }"  
                                              visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }"                                  
                                              change="onFlagFruttiferoChange"
                                              items="{
                                                      path: 'DataModel>/FlagFruttifero'
                                                }"
                                              selectedKey="{wizardModel>/Zflagfrutt}">
                                              <core:Item  key="{DataModel>Zflagfrutt}" text="{DataModel>Descrizione}" />
                                              <layoutData><l:GridData span="XL5 L5 M6 S12"  /></layoutData>
                                          </ComboBox>	
                                      </l:Grid>
                                  </items>     
                              </FlexBox>                                
                          </items>
                          <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                      </VBox>  

                      <VBox visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }">
                          <items>
                              <FlexBox width="100%" alignItems="Center" class="labelWidth sapUiTinyMarginTop sapUiTinyMarginBottom" >
                                  <items>
                                      <l:Grid  defaultSpan="XL12 L12 M12 S12" vSpacing="0">	
                                          <Label  design="Bold" width="100%" text="{i18n>wizardFieldCausaleBeneficiario}" wrapping="true" class="sapUiTinyMarginTop sapUiLargeMarginEnd">
                                              <layoutData><l:GridData span="XL6 L6 M4 S12" /></layoutData>
                                          </Label>
                                          <Input  value="{wizardModel>/Zcausben}" enabled="false" 
                                            visible="{= ${wizardModel>/PayMode} === 'ID3' ? true : false }" >
                                              <layoutData>
                                                  <l:GridData span="XL5 L5 M6 S12"  />
                                              </layoutData>
                                          </Input>  
                                      </l:Grid>
                                  </items>     
                              </FlexBox>                                
                          </items>
                          <layoutData><l:GridData span="XL3 L3 M6 S12" /></layoutData>
                      </VBox> 
                    </l:Grid>
                </items>
                <layoutData><l:GridData  span="XL3 L4 M6 S12"/></layoutData>
            </VBox>	
	    </content>
	</Panel>



	
    
            
</core:FragmentDefinition>